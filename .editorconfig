# EditorConfig: https://editorconfig.org

# Defaults for all files, unless overridden by file type.
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 100
indent_style = space
indent_size = 4

[*.{xml,yml,yaml,tf}]
indent_size = 2

[package.json]
indent_size = 2

[build.xml]
insert_final_newline = false
indent_size = 2

[*.{config,csproj}]
insert_final_newline = false
indent_size = 2
